{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Lettr",
  "theme": "mint",
  "buildCommand": "curl -s https://app.lettr.com/openapi.json -o openapi.json",
  "openapi": "/openapi.json",
  "api": {
    "baseUrl": "https://app.lettr.com/api",
    "auth": {
      "method": "bearer"
    }
  },
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#6366F1",
    "light": "#818CF8",
    "dark": "#4F46E5"
  },
  "appearance": {
    "default": "dark"
  },
  "topbarLinks": [
    {
      "name": "Support",
      "url": "mailto:support@lettr.com"
    }
  ],
  "topbarCtaButton": {
    "name": "Dashboard",
    "url": "https://app.lettr.com"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Documentation",
            "pages": ["introduction"]
          },
          {
            "group": "Quickstart",
            "pages": [
              {
                "group": "Laravel",
                "pages": [
                  "quickstart/laravel/introduction",
                  "quickstart/laravel/installation",
                  "quickstart/laravel/sending-emails",
                  "quickstart/laravel/templates",
                  "quickstart/laravel/type-safety"
                ]
              },
              {
                "group": "PHP",
                "pages": ["quickstart/php/introduction"]
              },
              {
                "group": "SMTP",
                "pages": ["quickstart/smtp/introduction"]
              },
              {
                "group": "Serverless",
                "pages": ["quickstart/serverless/introduction"]
              },
              {
                "group": "Node.js",
                "pages": ["quickstart/nodejs/introduction"]
              }
            ]
          }
        ]
      },
      {
        "tab": "Learn",
        "groups": [
          {
            "group": "Domains",
            "pages": [
              "learn/domains/introduction",
              "learn/domains/sending-domains",
              "learn/domains/tracking-domains",
              "learn/domains/inbound-domains",
              "learn/domains/storage-domains",
              "learn/domains/spf",
              "learn/domains/dkim",
              "learn/domains/dmarc",
              "learn/domains/bimi"
            ]
          },
          {
            "group": "Domain Verification",
            "pages": [
              "knowledge-base/domain-verification/introduction",
              "knowledge-base/domain-verification/azure",
              "knowledge-base/domain-verification/cloudflare",
              "knowledge-base/domain-verification/digitalocean",
              "knowledge-base/domain-verification/godaddy",
              "knowledge-base/domain-verification/google-cloud",
              "knowledge-base/domain-verification/hetzner",
              "knowledge-base/domain-verification/hostinger",
              "knowledge-base/domain-verification/ionos",
              "knowledge-base/domain-verification/linode",
              "knowledge-base/domain-verification/namecheap",
              "knowledge-base/domain-verification/netlify",
              "knowledge-base/domain-verification/route53",
              "knowledge-base/domain-verification/squarespace",
              "knowledge-base/domain-verification/strato",
              "knowledge-base/domain-verification/vercel"
            ]
          },
          {
            "group": "API Keys",
            "pages": [
              "learn/api-keys/introduction"
            ]
          },
          {
            "group": "Logs",
            "pages": [
              "learn/logs/introduction",
              "learn/logs/status-codes"
            ]
          }
        ]
      },
      {
        "tab": "MCP",
        "groups": [
          {
            "group": "MCP",
            "pages": [
              "mcp/introduction"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Reference",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Emails",
            "pages": [
              "api-reference/emails/send-email",
              "api-reference/emails/list-emails",
              "api-reference/emails/get-email"
            ]
          },
          {
            "group": "Domains",
            "pages": [
              "api-reference/domains/list-domains",
              "api-reference/domains/create-domain",
              "api-reference/domains/get-domain",
              "api-reference/domains/delete-domain",
              "api-reference/domains/verify-domain"
            ]
          },
          {
            "group": "Templates",
            "pages": [
              "api-reference/templates/list-templates",
              "api-reference/templates/create-template",
              "api-reference/templates/get-template",
              "api-reference/templates/update-template",
              "api-reference/templates/delete-template",
              "api-reference/templates/get-template-merge-tags"
            ]
          },
          {
            "group": "Webhooks",
            "pages": [
              "api-reference/webhooks/list-webhooks",
              "api-reference/webhooks/get-webhook"
            ]
          }
        ]
      }
    ]
  },
  "footerSocials": {}
}
