{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Lettr",
  "theme": "mint",
  "buildCommand": "curl -s https://app.lettr.com/openapi.json -o openapi.json",
  "openapi": "/openapi.json",
  "api": {
    "baseUrl": "https://app.lettr.com/api",
    "auth": {
      "method": "bearer"
    }
  },
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#6366F1",
    "light": "#818CF8",
    "dark": "#4F46E5"
  },
  "topbarLinks": [
    {
      "name": "Support",
      "url": "mailto:support@lettr.com"
    }
  ],
  "topbarCtaButton": {
    "name": "Dashboard",
    "url": "https://app.lettr.com"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Documentation",
            "pages": ["introduction"]
          },
          {
            "group": "Quickstart",
            "pages": [
              {
                "group": "PHP",
                "pages": ["quickstart/php/introduction"]
              },
              {
                "group": "SMTP",
                "pages": ["quickstart/smtp/introduction"]
              },
              {
                "group": "Serverless",
                "pages": ["quickstart/serverless/introduction"]
              },
              {
                "group": "Node.js",
                "pages": ["quickstart/nodejs/introduction"]
              }
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Reference",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Emails",
            "pages": [
              "api-reference/emails/send-email",
              "api-reference/emails/list-emails",
              "api-reference/emails/get-email"
            ]
          },
          {
            "group": "Domains",
            "pages": [
              "api-reference/domains/list-domains",
              "api-reference/domains/create-domain",
              "api-reference/domains/get-domain",
              "api-reference/domains/delete-domain",
              "api-reference/domains/verify-domain"
            ]
          }
        ]
      },
      {
        "tab": "Knowledgebase",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["knowledge-base/introduction"]
          },
          {
            "group": "Best Practices",
            "pages": [
              "knowledge-base/best-practices/deliverability",
              "knowledge-base/best-practices/security",
              "knowledge-base/best-practices/templates"
            ]
          },
          {
            "group": "Troubleshooting",
            "pages": [
              "knowledge-base/troubleshooting/authentication",
              "knowledge-base/troubleshooting/delivery-issues",
              "knowledge-base/troubleshooting/rate-limits"
            ]
          }
        ]
      }
    ]
  },
  "footerSocials": {}
}
